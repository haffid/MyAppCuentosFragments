<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_wall"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuentos\nInfantiles"
        android:textColor="#FFF59D"
        android:textSize="70sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="6sp"
        />
    <Button
        android:id="@+id/btnCuento"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_marginTop="50sp"
        android:background="@drawable/ic_book"
        android:layout_below="@id/txtTitulo"
        android:layout_centerHorizontal="true"
        android:onClick="click"
        />
    <TextView
        android:id="@+id/txtPres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Presiona sobre la imagen"
        android:layout_below="@id/btnCuento"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Omar Espina"
        android:layout_below="@id/txtPres"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        />

</RelativeLayout>